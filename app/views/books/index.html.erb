<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <%= render 'users/edit', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <%= render 'searches/search' %>
      <h2>Books</h2>
      <%= render 'index', books: @books%>
            <div class = "table_width">
        <table class="table table-bordered">
          <thead>
            <tr>
             <th>6日前</th>
             <th>5日前</th>
             <th>4日前</th>
             <th>3日前</th>
             <th>2日前</th>
             <th>1日前</th>
             <th>今日</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @today_book.count %></td>
              <td><%= @today_book_1.count %></td>
              <td><%= @today_book_2.count %></td>
              <td><%= @today_book_3.count %></td>
              <td><%= @today_book_4.count %></td>
              <td><%= @today_book_5.count %></td>
              <td><%= @today_book_6.count %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>